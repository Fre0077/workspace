server {
    port 4242;
    server_name localhost;
    error_page 404 404.html;
    index home.html;
    root ./srcs/server;


    location /hello {
        root ./srcs/server;
        index hello.html;
    }

    location / {
        root ./srcs/server;
        index home.html;
    }
    
    location /home {
        root ./srcs/server;
        index home.html;
    }
}